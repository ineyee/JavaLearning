<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="person" class="com.ineyee._05_diconverter.domain.Person">
        <property name="createTime" value="2025-11-08 18:32:45"/>
        <property name="updateTime" value="17:33:46 2026/12/09"/>
    </bean>

    <!--
        注册自定义的类型转换器
            全是固定写法，我们只需要在 set 集合里添加我们自定义的类型转换器即可
            注册完后，我们就可以像给基本数据类型、BigDecimal、字符串那样直接使用 value 属性给 LocalDateTime 类型的属性赋值字符串了，框架内部就能自动完成字符串到 LocalDateTime 的转换了

        注意：对于同一对类型转换（如 String -> LocalDateTime），Spring 只会使用一个转换器
            因此如果需要支持多种日期格式，应该在转换器内部处理多种格式，而不是注册多个转换器
    -->
    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <!-- 智能类型转换器，能够自动识别并转换多种日期格式 -->
                <bean class="com.ineyee._05_diconverter.converter.StringDateConverter">
                    <!-- 通过 list 标签注入支持的日期格式 -->
                    <property name="formats">
                        <list>
                            <value>yyyy-MM-dd HH:mm:ss</value>
                            <value>HH:mm:ss yyyy/MM/dd</value>
                        </list>
                    </property>
                </bean>
            </set>
        </property>
    </bean>
</beans>
